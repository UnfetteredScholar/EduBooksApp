<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".IT">

    <ImageButton
        android:id="@+id/it1"
        android:layout_width="185dp"
        android:layout_height="192dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="downloadFile1"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20999998"
        app:srcCompat="@drawable/it1" />

    <ImageButton
        android:id="@+id/it2"
        android:layout_width="185dp"
        android:layout_height="192dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="downloadFile2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/it1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20999998"
        app:srcCompat="@drawable/it2" />

    <ImageButton
        android:id="@+id/it3"
        android:layout_width="185dp"
        android:layout_height="192dp"
        android:layout_marginBottom="88dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="downloadFile3"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/it1"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/it3" />

    <ImageButton
        android:id="@+id/it4"
        android:layout_width="185dp"
        android:layout_height="192dp"
        android:layout_marginBottom="92dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="downloadFile3"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/it2"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/it4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/it"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

</androidx.constraintlayout.widget.ConstraintLayout>